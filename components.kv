<Status@Screen>:
    name:"status"
	TwoLineIconListItem:
		id: status
		size_hint:(1,0.2)
		pos_hint:{"top":1}
		text: " Moshood "
		secondary_text:"...Today is a good to do a good stuff!"
		ListImage:
			source:"images/icon.jpg"
    MDLabel:
    	text:"Change your Status below"
    	id:toppest
    	size_hint:(1,0.08)
    	top:status.top-status.height
    	bold:True
    	font_style:"Subhead"



    BoxLayout:
    	#the boxlayout that holds the status input
    	orientation:"horizontal"
    	top:toppest.top-toppest.height
    	id:toper
    	pos_hint:{"center_x":0.5}
    	size_hint:(1,0.22)
    	spacing:"10dp"
    	padding:["10dp",0]
    	
    	MDTextField:
    		id:status_input
    		hint_text:"enter your new status"
    		size_hint:(0.9,None)
    		height:"40dp"
    	MDIconButton:
    		icon:"send"
    		text_color:[1,1,1,1]
    		md_bg_color:teal_color
    		theme_text_color:"Custom"
    		size_hint:(None,None)
    		width:"40dp"
    		height:self.width
    		on_release:
    			status.secondary_text=status_input.text
    			status_input.text=""
    ScrollView:
    	effect_cls:"ScrollEffect"
    	size_hint:(1,0.5)
    	top:toper.top-toper.height

    	GridLayout:
    		cols:1
    		size_hint:(1,None)
    		height:self.minimum_height
    		padding:(10,0)
    		spacing:"10dp"
    		OneLineListItem:
    			text:"Previous statuses"
    			size_hint:(1,None)
    			font_style:"Subhead"

    		OneLineIconListItem:
    			text:"last status"
    			size_hint:(1,None)
    		OneLineIconListItem:
    			text:"second to the last"
    			size_hint:(1,None)
    		OneLineIconListItem:
    			text:"third to the last"
    			size_hint:(1,None)
    		OneLineIconListItem:
    			text:"fourth to the last"
    			size_hint:(1,None)



